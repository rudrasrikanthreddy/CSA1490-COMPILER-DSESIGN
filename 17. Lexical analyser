#include <stdio.h>
#include<string.h>
int main()
{
    char str[100][100],j;

    int words=0,newline=0,characters=0;
    int i=0;
    while(i==0 || strcmp(str[i-1],"\0")){
    	gets(str[i]);
    	i++;
	}
	int s=0,l=0;
    for(i=0;str[i][0]!='\0';i++)
	{
    	for(j==0;j<strlen(str[i]);j++)
		{
    		if(str[i][j]==' '){
    			s++;
			}
		}
		l++;
		s++;
	}
	printf("Number of Lines: %d\n",l);
	printf("Number of Words: %d",s);
}
