#include<stdio.h>
#include<string.h>
#define MAX_LEN 100

char input[MAX_LEN];

int E() {
    int i=0;
    if(input[i]=='T') {
        i++;
        if(input[i]=='+') {
            i++;
            if(E()) {
                return 1;
            }
        }
        return 1;
    }
    return 0;
}

int T() {
    int i=0;
    if(input[i]=='F') {
        i++;
        if(input[i]=='*') {
            i++;
            if(T()) {
                return 1;
            }
        }
        return 1;
    }
    return 0;
}

// function to match the grammar rule for F -> ( E ) | id
int F() {
    int i=0;
    if(input[i]=='(') {
        i++;
        if(E()) {
            if(input[i]==')') {
                return 1;
            }
        }
    } else if(input[i]=='id') {
        return 1;
    }
    return 0;
}

int parse() {
    if(E() && strlen(input)==1) {
        return 1;
    } else {
        return 0;
    }
}

int main() {
    printf("Enter an input string: ");
    scanf("%s", input);
    if(parse()) {
        printf("Input string satisfies the grammar.\n");
    } else {
        printf("Input string does not satisfy the grammar.\n");
    }
    return 0;
}
